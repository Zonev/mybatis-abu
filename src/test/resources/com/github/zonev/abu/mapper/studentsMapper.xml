<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zonev.abu.dao.StudentsDao">

    <insert id="insertStudentByEntity" parameterType="org.zonev.abu.dto.StudentsInsertDTO">
        insert into students
        (`name`, grade, class)
        values
        (#{name,jdbcType=VARCHAR}, #{gradeNum,jdbcType=INTEGER}, #{classNum,jdbcType=INTEGER})
    </insert>

    <insert id="insertStudentByColumn">
        insert into students
        (`name`, grade, class)
        values
        (#{name,jdbcType=VARCHAR}, #{gradeNum,jdbcType=INTEGER}, #{classNum,jdbcType=INTEGER})
    </insert>

    <insert id="insertBatchStudentByEntity">
        insert into students
        (`name`, grade, class)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.name,jdbcType=VARCHAR}, #{item.gradeNum,jdbcType=INTEGER}, #{item.classNum,jdbcType=INTEGER})
        </foreach>
    </insert>

    <insert id="insertStudentByMap">
        insert into students
        (`name`, grade, class)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.name,jdbcType=VARCHAR}, #{item.gradeNum,jdbcType=INTEGER}, #{item.classNum,jdbcType=INTEGER})
        </foreach>
        ,
        (#{entity.name,jdbcType=VARCHAR}, #{entity.gradeNum,jdbcType=INTEGER}, #{entity.classNum,jdbcType=INTEGER})
    </insert>
</mapper>
